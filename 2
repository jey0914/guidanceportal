<?php
session_start();
include("db.php");

if (!isset($_SESSION['email'])) {
    header("Location: login.php");
    exit;
}

$email = $_SESSION['email'];

$stmt = $con->prepare("SELECT fname, strand_course, year_level FROM form WHERE email = ?");
$stmt->bind_param("s", $email);
$stmt->execute();
$result = $stmt->get_result();
$user = $result->fetch_assoc();

$fname = $user['fname'] ?? '';
$strand_course = $user['strand_course'] ?? '';
$year_level = $user['year_level'] ?? '';

// Store them in session if needed
$_SESSION['fname'] = $fname;
$_SESSION['strand_course'] = $strand_course;
$_SESSION['year_level'] = $year_level;
?>


